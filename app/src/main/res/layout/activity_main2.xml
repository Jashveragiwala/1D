<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE4F8"
    android:padding="40sp"
    android:orientation="vertical"
    tools:context=".MainActivity2"
    android:gravity="center">


    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Journeys "
        android:padding="0sp"
        android:textColor="#032256"
        android:textSize="60sp"

        />
    <Button
        android:id="@+id/journeys1"
        android:background="@drawable/button4"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Day 1"
        android:textSize="35sp"
        android:layout_marginTop="10sp"
        android:textColor="#18C0C1"
        app:icon="@drawable/trash"
        app:iconSize="40sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingLeft="30sp"
        />
    <Button
        android:id="@+id/journeys2"
        android:background="@drawable/button4"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Day 2"
        android:textSize="35sp"
        android:layout_marginTop="10sp"
        android:textColor="#18C0C1"
        app:icon="@drawable/trash"
        app:iconSize="40sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingLeft="30sp"
        />
    <Button
        android:id="@+id/journey2"
        android:background="@drawable/button"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Add Journey"
        android:textSize="22sp"
        android:layout_marginTop="60sp"
        />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_marginTop="90sp"
        android:background="@drawable/button3"
        android:isScrollContainer="false">

        <Button
            android:id="@+id/button3"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/button2"
            android:padding="5sp"
            app:icon="@drawable/home"
            app:iconSize="40sp" />
        <Button
            android:id="@+id/button4"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/button2"
            android:padding="5sp"
            app:icon="@drawable/nav"
            app:iconSize="40sp" />
    </TableRow>


</LinearLayout>