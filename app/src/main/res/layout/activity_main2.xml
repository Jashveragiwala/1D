<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE4F8"
    android:padding="0sp"
    android:orientation="vertical"
    tools:context=".MainActivity2"
    android:gravity="center">


    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="75dp"
        android:padding="0sp"

        android:text="Journeys "
        android:textColor="#032256"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/journeys1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        app:cornerRadius="20dp"
        android:height="85dp"
        android:paddingLeft="30sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:text="Day 1"
        android:textColor="#18C0C1"
        android:textSize="45sp"
        app:iconTint="@color/red"
        android:backgroundTint="#FFFFFF"
        app:icon="@drawable/trash"
        app:iconSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/journeys2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:cornerRadius="20dp"
        android:height="85dp"
        android:paddingLeft="30sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:text="Day 2"
        android:textColor="#18C0C1"
        android:textSize="45sp"
        app:icon="@drawable/trash"
        app:iconSize="40sp"
        app:iconTint="@color/red"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journeys1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/journeys3"
        android:layout_width="200sp"
        android:layout_height="60dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/teal_700"
        android:text="Add Journey"
        android:textSize="22sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journeys2" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navshape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        app:itemIconSize="35dp"
        app:itemIconTint="#092048"
        app:itemTextColor="#092048"/>


</androidx.constraintlayout.widget.ConstraintLayout>