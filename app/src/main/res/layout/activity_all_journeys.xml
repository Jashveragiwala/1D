<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE4F8"
    android:padding="0sp"
    android:orientation="vertical"
    tools:context=".All_JourneysActivity"
    android:gravity="center">


    <TextView
        android:id="@+id/All_journeys_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="75dp"
        android:padding="0sp"

        android:text="Journeys "
        android:textColor="#032256"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/test_maps_button"
        app:layout_constraintTop_toBottomOf="@+id/All_journeys_heading"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/journeys3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/All_journeys_heading">

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/journeys3"
        android:layout_width="200sp"
        android:layout_height="60dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/teal_700"
        android:onClick="addButton"
        android:text="Add Journey"
        android:textSize="22sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/All_journeys_heading"
        app:layout_constraintVertical_bias="0.969" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navshape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        app:itemIconSize="35dp"
        app:itemIconTint="#092048"
        app:itemTextColor="#092048"/>

    <Button
        android:id="@+id/test_maps_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Maps"
        app:layout_constraintBottom_toTopOf="@+id/journeys3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>